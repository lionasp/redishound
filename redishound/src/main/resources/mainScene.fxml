<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
        prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/11.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.lionasp.controller.MainSceneController">
    <HBox>
        <Label style="-fx-padding: 5;">Hostname</Label>
        <TextField fx:id="hostnameInput" promptText="localhost" />
        <Separator />
        <Label style="-fx-padding: 5;">Port</Label>
        <TextField prefHeight="27.0" prefWidth="57.0" fx:id="portInput" promptText="6379" />
        <Separator />
        <Label style="-fx-padding: 5;">DB number</Label>
        <TextField prefHeight="27.0" prefWidth="57.0" fx:id="dbNumberInput" promptText="0" />
    </HBox>
   <Button layoutX="530.0" layoutY="1.0" mnemonicParsing="false" text="Connect" onAction="#onConnectButtonClicked" />

</AnchorPane>
